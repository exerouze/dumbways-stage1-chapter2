  <div class="project-container">
    <div class="project-form">
      <div class="form-container">
        <h1>EDIT MY PROJECT</h1>
        
        <form action="/edit-project/{{data.id}}" method="post" class="container mt-5">
          <div class="mb-3">
            <label for="project-name" class="form-label">Project Name</label>
            <input value="{{data.nameProject}}" type="text" class="form-control" id="project-name" aria-describedby="emailHelp" name="nameProject">
          </div>
        
          <div class="row">
            <div class="col">
              <label for="start-date" class="form-label">Start Date</label>
              <input value="{{data.startDate}}" type="date" class="form-control" id="start-date" name="startDate">
            </div>
            <div class="col">
              <label for="end-date" class="form-label">End Date</label>
              <input value="{{data.endDate}}" type="date" class="form-control" id="end-date" name="endDate">
            </div>
          </div>
        
          <div class="mb-3">
            <label for="project-desc" class="form-label">Description</label>
            <textarea class="form-control" id="project-desc" rows="3" name="descProject">{{data.descProject}}</textarea>
          </div>
        
          <div>
            <label>Technologies</label>
            <div class="technologies-checkbox-group">
              <div class="checkbox-group">
                <label>
                  <input type="checkbox" name="tech" value="fa-python" id="python"> Python
                </label>
              </div>
              <div class="checkbox-group">
                <label>
                  <input type="checkbox" name="tech" value="fa-react" id="reactjs"> React.js
                </label>
              </div>
              <div class="checkbox-group">
                <label>
                  <input type="checkbox" name="tech" value="fa-node-js" id="nodejs"> Node.js
                </label>
              </div>
              <div class="checkbox-group">
                <label>
                  <input type="checkbox" name="tech" value="fa-golang" id="golang"> Golang
                </label>
              </div>
            </div>
          </div>
         <div>
            <label for="formFile" class="form-label">Upload
                Image</label>
              <input
                class="form-control form-control-lg px-2"
                type="file"
                id="formFile"
                style="font-size: 1rem"
              />
          </div>
          <div class="button-group">
            <button type="submit">Submit</button>
          </div>
        </form>
      </div>
    </div>

