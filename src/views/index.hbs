                <i class="bi bi-envelope"></i>
              </a>
            </div>
          </div>

          <div class="content-right col-md-4">
            <div class="profileimg">
              <img
                class="img-fluid"
                src="../assets/img/jafar-profile.jpeg"
                alt=""
              />
              <h3>Ja'far Abdullah</h3>
              <h4>Fullstack Developer</h4>
            </div>
          </div>
        </div>
      </main>
    </div>

    <br>
  

    <div class="myproject-title">
      <h1>MY PROJECT</h1>
    </div>

    <div id="project-list" class="project-list">
      {{#each data}}
      <div class="project-item">
                <div class="project-image">
                  <a href="/detail-project/{{this.id}}">
                    <img src="/uploads/{{this.image}}" alt="Project Image">
                  </a>
                    
                </div>
                <div class="project-content">
                    <h1>
                        <a href="/detail-project/{{this.id}}" target="_blank">{{this.name_project}}</a>
                    </h1>
                    <div class="detail-project-content">
                        Duration : {{this.interval}} <span class="span-line"> | </span> {{this.name}}
                    </div>
                    <div class="p-project-content">
                        <p>
                            {{this.desc_project}}
                        </p>
                    </div>
                    <div class="icon-checkbox">
                        {{#each this.tech}}
                          <i class="fa-brands {{this}}"></i>
                        {{/each}}
                    </div>
                    

                    
                    <div class="btn-group">
                      {{#if handleLogin}}
                        <a href="/edit-project/{{this.id}}" class="list-btn btn-edit">Edit</a>
                        <a href="/delete/{{this.id}}" class="list-btn btn-del">Delete</a>
                      {{/if}}
                    </div>
               
                </div>
            </div>
      {{/each}}
      
      <!-- dynamic content would be here -->
      


    </div>
  </div>


